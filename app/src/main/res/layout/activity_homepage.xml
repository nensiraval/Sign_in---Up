<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/b3"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2up">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Page"
        android:textColor="#040305"
        android:gravity="center"
        android:layout_margin="30dp"
        android:textSize="36dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="25dp"
        android:hint="username"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        app:boxStrokeWidth="4dp"
        app:endIconMode="none"
        app:boxCornerRadiusTopStart="20sp"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:boxCornerRadiusBottomEnd="20sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/userh"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        app:boxStrokeColor="@color/black"
        android:hint="email"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        app:boxStrokeWidth="4dp"
        app:endIconMode="none"
        app:boxCornerRadiusTopStart="20sp"
        app:hintTextColor="@color/black"
        app:boxCornerRadiusBottomEnd="20sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="password"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        android:layout_marginTop="10dp"
        app:boxStrokeWidth="4dp"
        app:boxCornerRadiusTopStart="20sp"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:boxCornerRadiusBottomEnd="20sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hpass"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="password"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        android:layout_marginTop="10dp"
        app:boxStrokeWidth="4dp"
        app:endIconMode="password_toggle"
        app:boxCornerRadiusTopStart="20sp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:boxCornerRadiusBottomEnd="20sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpassh"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#3A3131"
        android:text="Delete"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="or"
        android:textColor="#000"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#3A3131"
        android:text="Update"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20dp"/>

</LinearLayout>